---
import { defaults } from '@/config/defaults';

const benefits = defaults.benefits;
---

<section class="py-20 bg-gray-50">
  <div class="wrap">
    <div class="mb-12">
      <span class="font-(family-name:--font-headline) font-bold text-[13px] uppercase tracking-[0.12em] text-green mb-3 inline-block">Why Cash</span>
      <h2 class="font-(family-name:--font-headline) font-extrabold uppercase leading-[1.08] text-dark mb-4" style="font-size: clamp(30px, 4vw, 46px);">
        The Outcomes Sellers<br />Actually Care About
      </h2>
      <p class="text-[17px] text-gray-500 max-w-[620px] leading-relaxed">Skip the prep, the showings, and the financing delays. A cash sale is built around fewer steps and more certainty.</p>
    </div>

    <div class="grid grid-cols-3 gap-6 max-md:grid-cols-1">
      {benefits.map((benefit, i) => (
        <div class:list={['reveal bg-white border border-gray-100 rounded-[14px] p-8 shadow-[0_1px_3px_rgba(0,0,0,0.08)] transition-all duration-300 hover:translate-y-[-4px] hover:shadow-[0_10px_25px_-5px_rgba(0,0,0,0.1)]', i === 1 && 'reveal-d1', i === 2 && 'reveal-d2']}>
          <div class="w-[52px] h-[52px] rounded-xl bg-green-light flex items-center justify-center text-2xl mb-5">{benefit.icon}</div>
          <h3 class="font-(family-name:--font-headline) font-bold text-[22px] uppercase mb-2">{benefit.title}</h3>
          <p class="text-[15px] text-gray-500 leading-relaxed">{benefit.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
